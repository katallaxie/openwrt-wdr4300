
config interface 'loopback'
	option ifname 'lo'
	option proto 'static'
	option ipaddr '127.0.0.1'
	option netmask '255.0.0.0'

config interface 'lan'
	option ifname 'eth0.1'
	option type 'bridge'
	option proto 'static'
	option ipaddr '10.0.10.1'
	option netmask '255.255.254.0'
	option accept_ra  '1'
    option send_rs  '1'

config interface 'hotspot'
	option ifname 'eth0.3'
	option proto 'static'
	option ipaddr '10.0.20.1'
	option netmask '255.255.255.0'
	option type 'bridge'
	option defaultroute '0'

config interface 'voip'
	option ifname 'eth0.4'
	option type 'bridge'
    option proto 'static'
    option ipaddr '10.0.21.1'
    option netmask '255.255.255.0'

config interface 'wan'
	option ifname 'eth0.2'
	option proto 'dhcp'
	option accept_ra  '0'
    option send_rs  '0'

config switch
	option name 'eth0'
	option reset '1'
	option enable_vlan '1'

config switch_vlan
	option device 'eth0'
	option vlan '1'
	option ports '0t 2t 3 4 5'

config switch_vlan
	option device 'eth0'
	option vlan '2'
	option ports '0t 1'

config switch_vlan
	option device 'eth0'
	option vlan '3'
	option ports '0t'

config switch_vlan
	option device 'eth0'
	option vlan '4'
	option ports '0t 2t'
